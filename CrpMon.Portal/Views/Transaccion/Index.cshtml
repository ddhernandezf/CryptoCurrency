@using CrpMon.Comunes.Modelos.Vistas

@{
    Layout = "~/Views/Shared/_IframeViewLayout.cshtml";
}

<script src="@Url.Content("~/CrpMonPortal/Angular/Generales/Funciones.js")"></script>
<script src="@Url.Content("~/CrpMonPortal/Angular/Apps/EtherApp.js")"></script>
<script src="@Url.Content("~/CrpMonPortal/Angular/Controllers/TransaccionCtrl.js")"></script>

<div ng-app="EtherApp" ng-controller="TransaccionCtrl">
    <div class="col-11" style="background-color: white;">
        <div class="col-12" style="text-align: center;">
            <button class="k-button" ng-click="Refrescar();"><img src="@Url.Content("~/CrpMonPortal/Imagenes/Vistas/Refrescar.png")" /><span>{{ModeloVista.btnRefrescar}}</span></button>
            <button class="k-button" ng-click="Cerrar()"><img src="@Url.Content("~/CrpMonPortal/Imagenes/Vistas/Cerrar.png")" /><span>{{ModeloVista.btnCancelar}}</span></button>
        </div>
        <div class="col-12 legend">
            {{ModeloVista.lblMensaje}}
        </div>
        <div class="col-12">
            <div id="kgrdTran" kendo-grid="kgrdTran" options="kgrdTranOpt"></div>
        </div>
    </div>
    <div kendo-window="kwnComprar"
         k-options="kwnComprarOpt">
        <div id="loader" style="width: 100%;text-align: center;display: table;height: 100%;">
            <img src="@Url.Content("~/Content/kendo/2017.2.621/BlueOpal/loading-image.gif")" style="display: table-cell;text-align: center;vertical-align: middle;margin: 0 auto 0 auto;padding: 10px 0px;" />
        </div>
        <div id="GestorPago">
            <div style="text-align: center;width: 100%;">
                <img ng-src="{{Item.Monedero_Qrcode_Url}}" border="0" style="display: block;margin: 0 auto 0 auto;">
            </div>
            <div class="legend" style="text-align:left;"><strong>{{ModeloVista.Confirmacion.lblTotal}} {{Item.Monedero_Amount}} (ETH)</strong> </div>
            <div class="legend" style="text-align:left;"><strong>{{ModeloVista.Confirmacion.lblDireccion}} {{Item.Monedero_Address}}</strong> </div>
            <div class="legend" style="text-align:left;"><strong>{{ModeloVista.Confirmacion.lblTiempo}} </strong> {{Item.TiempoAproximado}}</div>
            <div class="error">{{msgError}}</div>
            <div class="col-11 button-container">
                <button class="k-button" ng-click="CerrarVentanaCompra()">{{ModeloVista.Confirmacion.btnCerrar}}</button>
            </div>
        </div>
    </div>
</div>